<h1 align="center">꿀 팁 대 방 출</h1><br>

<div align="right">
    <%= link_to '꿀팁알려주기', new_tip_path , :class => "button"%>
</div>

<div class="container">
  <% @tips.each do |tip| %>
    <div class="thumbnail" align="center">
      <a href="/tips/<%=tip.id%>">
        <img src="/assets/hi.png" alt="thumbnail" style="width: 200px; height: 210px;">
        <div class="caption">
          <h3><%= tip.title %></h3>
          <p><%= tip. content %></p>
          <span class="btn btn-outline-danger"><%= Tip.find(tip.id).likes.count %><i class="fa fa-heart" aria-hidden="true"></i></span>
        </div>
      </a>
    </div>
  <% end %>
</div>

<hr>
